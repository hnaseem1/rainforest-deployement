<div class="picture">
  <%= link_to(image_tag(product.url), product_path(product)) %>
</div>

<div class="text">
  <%= link_to "#{ product.name }", product_path(product) %>
  <h3 class="description">
    Description: <%= product.description %>
    <br>
    Price: <%= product.price_in_dollar %> dollars
  </h3>
</div>
