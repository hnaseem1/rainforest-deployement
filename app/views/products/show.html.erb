<div class="show">
  <%= render "product_individual", product: @product %>

  <span class="links">
    <%= link_to "Edit", edit_product_path %> |

    <%= link_to "Delete", product_url(@product), method: :delete, data: {confirm: "Are you sure you want to delete this product #{ @product.name }?"} %>
  </span>


  <!-- First we will find the review for the product -->
  <!--  Display the review (review description)  we will show the timestamp-->
  <!--  have a form to add review we make sure the product_id is the same as params[:id] -->
</div>

<div class="review">
  <h2 class="label">Reviews:</h2>
  <% @product.reviews.each do |review| %>

  <ul>
    <li>
      <span class="review-description"><%= review.description %></span>

      <span class="time"><%= review.created_at.asctime %></span>

      <br/>

      <span class="links">
        <%= link_to 'Edit', edit_product_review_path(@product.id,review) %> |
        <%= link_to "Delete", product_review_url(@product.id, review), method: :delete, data: {confirm: "Are you sure you want to delete \"#{ review.description }\"?"} %>
      </span>
    </li>
  </ul>

  <% end %>
  <%=  render 'review' ,locals:{ review: @review , product_id: @product.id } %>
</div>
